{% comment %} Modular About Us section for luxe storytelling {% endcomment %}
<section class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'hero' %}
          <div class="grid grid--1-col grid--2-col-tablet">
            <div>
              <p class="eyebrow">{{ block.settings.eyebrow }}</p>
              <h1 class="title h0">{{ block.settings.heading }}</h1>
              <p class="subtitle">{{ block.settings.subheading }}</p>
              {% if block.settings.cta_label != blank and block.settings.cta_link != blank %}
                <a class="button" href="{{ block.settings.cta_link }}">{{ block.settings.cta_label }}</a>
              {% endif %}
            </div>
            {% if block.settings.image != blank %}
              <div>
                <div class="media">
                  {{ block.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', alt: block.settings.heading }}
                </div>
              </div>
            {% endif %}
          </div>

        {% when 'story' %}
          <div class="rte">
            {{ block.settings.body }}
          </div>

        {% when 'values' %}
          <div class="grid grid--1-col grid--3-col-tablet">
            {% for i in (1..6) %}
              {% assign icon = block.settings["icon_" | append: i ] %}
              {% assign title = block.settings["title_" | append: i ] %}
              {% assign copy = block.settings["copy_" | append: i ] %}
              {% if title != blank or copy != blank %}
                <div class="card">
                  {% if icon != blank %}
                    <div class="media">{{ icon | image_url: width: 256 | image_tag: loading: 'lazy', alt: title }}</div>
                  {% endif %}
                  <h3 class="h3">{{ title }}</h3>
                  <p>{{ copy }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>

        {% when 'badges' %}
          <div class="badges">
            <ul class="list-unstyled inline-list">
              {% if block.settings.badge_1 != blank %}<li class="badge">{{ block.settings.badge_1 }}</li>{% endif %}
              {% if block.settings.badge_2 != blank %}<li class="badge">{{ block.settings.badge_2 }}</li>{% endif %}
              {% if block.settings.badge_3 != blank %}<li class="badge">{{ block.settings.badge_3 }}</li>{% endif %}
            </ul>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "About — modular",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Colors", "default": "scheme-1" }
  ],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero",
      "settings": [
        { "type": "text", "id": "eyebrow", "label": "Eyebrow" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "subheading", "label": "Subheading" },
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "cta_label", "label": "Button label" },
        { "type": "url", "id": "cta_link", "label": "Button link" }
      ]
    },
    {
      "type": "story",
      "name": "Story",
      "settings": [
        { "type": "richtext", "id": "body", "label": "Body" }
      ]
    },
    {
      "type": "values",
      "name": "Values (3–6)",
      "settings": [
        { "type": "image_picker", "id": "icon_1", "label": "Icon 1" },
        { "type": "text", "id": "title_1", "label": "Title 1" },
        { "type": "textarea", "id": "copy_1", "label": "Copy 1" },

        { "type": "image_picker", "id": "icon_2", "label": "Icon 2" },
        { "type": "text", "id": "title_2", "label": "Title 2" },
        { "type": "textarea", "id": "copy_2", "label": "Copy 2" },

        { "type": "image_picker", "id": "icon_3", "label": "Icon 3" },
        { "type": "text", "id": "title_3", "label": "Title 3" },
        { "type": "textarea", "id": "copy_3", "label": "Copy 3" },

        { "type": "image_picker", "id": "icon_4", "label": "Icon 4" },
        { "type": "text", "id": "title_4", "label": "Title 4" },
        { "type": "textarea", "id": "copy_4", "label": "Copy 4" },

        { "type": "image_picker", "id": "icon_5", "label": "Icon 5" },
        { "type": "text", "id": "title_5", "label": "Title 5" },
        { "type": "textarea", "id": "copy_5", "label": "Copy 5" },

        { "type": "image_picker", "id": "icon_6", "label": "Icon 6" },
        { "type": "text", "id": "title_6", "label": "Title 6" },
        { "type": "textarea", "id": "copy_6", "label": "Copy 6" }
      ]
    },
    {
      "type": "badges",
      "name": "Badges",
      "settings": [
        { "type": "text", "id": "badge_1", "label": "Badge 1", "default": "High quality materials" },
        { "type": "text", "id": "badge_2", "label": "Badge 2", "default": "Great customer service" },
        { "type": "text", "id": "badge_3", "label": "Badge 3", "default": "Fast shipping" }
      ]
    }
  ],
  "presets": [{ "name": "About — modular", "blocks": [{ "type": "hero" }, { "type": "story" }, { "type": "values" }, { "type": "badges" }] }]
}
{% endschema %}