<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding center">
    <h2 class="title">{{ section.settings.heading | default: 'Follow us on Instagram' }}</h2>
    {% assign url = section.settings.url | default: settings.social_instagram_link %}
    {% if url != blank %}
      <a class="button" href="{{ url }}" target="_blank" rel="noopener">
        {% render 'icon-instagram' %} {{ section.settings.button_label | default: '@acquiretaste' }}
      </a>
    {% else %}
      <p>Add an Instagram URL in the section settings or Theme settings â†’ Social media.</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Instagram CTA",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "Follow us on Instagram" },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "@acquiretaste" },
    { "type": "url", "id": "url", "label": "Instagram URL (optional)" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Colors", "default": "scheme-1" }
  ],
  "presets": [{ "name": "Instagram CTA" }]
}
{% endschema %}
