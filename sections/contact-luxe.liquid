<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="grid grid--1-col grid--2-col-tablet items-start" style="gap:2rem;">
      <div>
        {% if section.settings.eyebrow != blank %}<p class="eyebrow" style="letter-spacing:.08em;opacity:.85">{{ section.settings.eyebrow }}</p>{% endif %}
        {% if section.settings.heading != blank %}<h1 class="title h0" style="letter-spacing:-.02em;line-height:1.04">{{ section.settings.heading }}</h1>{% endif %}
        {% if section.settings.subheading != blank %}<p class="subtitle" style="max-width: 70ch; opacity:.92">{{ section.settings.subheading }}</p>{% endif %}
        <div class="rte" style="margin-top:1.25rem;">
          {% if section.settings.email != blank %}<p><strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>{% endif %}
          {% if section.settings.phone != blank %}<p><strong>Phone:</strong> <a href="tel:{{ section.settings.phone | replace: ' ', '' }}">{{ section.settings.phone }}</a></p>{% endif %}
          {% if section.settings.address != blank %}<p><strong>Studio:</strong><br>{{ section.settings.address }}</p>{% endif %}
          {% if section.settings.hours != blank %}<p><strong>Hours:</strong><br>{{ section.settings.hours }}</p>{% endif %}
        </div>
      </div>
      <div>
        <div id="ContactForm" class="card" style="padding:1.25rem;">
          {% if form and form.posted_successfully? %}<h2 class="h2" style="margin:0 0 .5rem 0">{{ section.settings.success_title }}</h2><p>{{ section.settings.success_body }}</p>{% endif %}
          {% form 'contact', id: 'ContactForm' %}
            {% if form.errors %}<div class="form__message" role="alert"><p>Please correct the highlighted fields and try again.</p></div>{% endif %}
            <div class="field" style="margin-bottom:.75rem;"><label for="ContactForm-name">Name</label><input type="text" id="ContactForm-name" name="contact[name]" value="{{ form.name | escape }}" required></div>
            <div class="field" style="margin-bottom:.75rem;"><label for="ContactForm-email">Email</label><input type="email" id="ContactForm-email" name="contact[email]" value="{{ form.email | escape }}" required></div>
            <div class="field" style="margin-bottom:.75rem;"><label for="ContactForm-phone">Phone (optional)</label><input type="tel" id="ContactForm-phone" name="contact[phone]" value="{{ form.phone | escape }}"></div>
            <div class="field" style="margin-bottom:1rem;"><label for="ContactForm-message">Message</label><textarea id="ContactForm-message" name="contact[body]" rows="6" required></textarea></div>
            <button class="button" type="submit">Send message</button>
          {% endform %}
        </div>
      </div>
    </div>
    {% if section.settings.map_iframe != blank %}<div style="margin-top:2rem;"><div class="media">{{ section.settings.map_iframe }}</div></div>{% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Contact — Luxe",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "AcquireTaste" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Contact us" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Questions about fit, drops, or orders? Our team answers quickly. Expect clear guidance and straight solutions." },
    { "type": "text", "id": "email", "label": "Email (displayed)", "default": "support@acquiretaste.shop" },
    { "type": "text", "id": "phone", "label": "Phone (displayed)", "default": "" },
    { "type": "richtext", "id": "address", "label": "Address (optional)", "default": "" },
    { "type": "textarea", "id": "hours", "label": "Hours (optional)", "default": "Mon–Fri: 10am–6pm (PT)" },
    { "type": "text", "id": "success_title", "label": "Success title", "default": "Message sent" },
    { "type": "textarea", "id": "success_body", "label": "Success message", "default": "Thanks for reaching out—our team will reply shortly." },
    { "type": "html", "id": "map_iframe", "label": "Embedded map (optional iframe)" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Colors", "default": "scheme-1" }
  ],
  "presets": [{ "name": "Contact — Luxe" }]
}
{% endschema %}