<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <ul class="grid grid--1-col grid--3-col-tablet list-unstyled" role="list" style="gap:1.25rem;">
      {% for block in section.blocks %}
        <li class="card" style="padding:1rem;display:flex;gap:.75rem;align-items:flex-start;">
          {% if block.settings.icon != blank %}
            <div class="media" style="flex:0 0 auto; width:40px;">
              {{ block.settings.icon | image_url: width: 80 | image_tag: loading: 'lazy', alt: block.settings.title }}
            </div>
          {% endif %}
          <div>
            <h3 class="h4" style="margin:0 0 .25rem 0">{{ block.settings.title }}</h3>
            {% if block.settings.text != blank %}<p style="margin:0;opacity:.9">{{ block.settings.text }}</p>{% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "USP strip",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Colors", "default": "scheme-1" }
  ],
  "blocks": [
    { "type": "usp", "name": "USP", "settings": [
      { "type": "image_picker", "id": "icon", "label": "Icon (optional)" },
      { "type": "text", "id": "title", "label": "Title", "default": "High-quality materials" },
      { "type": "text", "id": "text", "label": "Short copy", "default": "Premium fabrics selected for feel and longevity." }
    ]}
  ],
  "max_blocks": 6,
  "presets": [{ "name": "USP strip", "blocks": [{ "type": "usp" }, { "type": "usp" }, { "type": "usp" }] }]
}
{% endschema %}
